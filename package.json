{
  "name": "@porfidev/simple-char-counter",
  "version": "1.0.2",
  "description": "A lightweight jQuery plugin that adds a real-time character counter to any input or textarea. As you type, it displays the current number of characters, making it easy to track limits and improve form usability. Perfect for forms, text fields, and UI validations.",
  "keywords": [
    "jquery",
    "plugin",
    "text",
    "input",
    "textarea",
    "char counter",
    "character counter"
  ],
  "homepage": "https://github.com/porfidev/simpleCharCounter.js#readme",
  "bugs": {
    "url": "https://github.com/porfidev/simpleCharCounter.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porfidev/simpleCharCounter.js.git"
  },
  "license": "MIT",
  "author": "Porfirio Ch√°vez <hola@porfi.dev>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build:cjs": "mkdir -p dist && terser ./simpleCC.js -o dist/index.cjs --compress --mangle",
    "build:esm": "mkdir -p dist && terser ./simpleCC.js -o dist/index.mjs --compress --mangle",
    "build": "npm run build:cjs && npm run build:esm",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "terser": "^5.44.1"
  },
  "types": "./index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "peerDependencies": {
    "jquery": ">=1.9"
  }
}
